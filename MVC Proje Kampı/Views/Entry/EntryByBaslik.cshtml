@using EntityLayer.Concrete
@model List<Entry>
@{
    ViewBag.Title = "EntryByBaslik";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="timeline">
                            @foreach (var item in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-success">@(((DateTime)item.EntryTarih).ToString("dd MMMM yyyy ~ HH:mm:ss"))</span>
                                </div>
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="/Yazar/YazarDuzenle/@item.YazarID">@item.Yazar.YazarAd</a></h3>
                                        <div class="timeline-body">
                                            @item.EntryCont
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>