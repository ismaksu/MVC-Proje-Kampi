@model EntityLayer.Concrete.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>KategoriEkle</h2>

@using (Html.BeginForm("KategoriEkle", "AdminKategori", FormMethod.Post))
{
    <div class="container-fluid">
        @Html.Label("Kategori Adı : ")
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KategoriAd)
        <br />
        @Html.Label("Kategorinin Açıklaması : ")
        @Html.TextAreaFor(x => x.KategoriAciklama, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KategoriAciklama)
        <br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}