@using EntityLayer.Concrete
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2>Kategoriler</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.KategoriID</th>
                <td>@item.KategoriAd</td>
                <td>
                    <a href="/AdminKategori/KategoriSil/@item.KategoriID" class="btn btn-danger">Sil</a>
                    <a href="/AdminKategori/KategoriDuzenle/@item.KategoriID" class="btn btn-warning">Güncelle</a>
                    <a href="#" class="btn btn-info">Başlıklar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/AdminKategori/KategoriEkle/" class="btn btn-info">Yeni Kategori Ekle</a>
<br />