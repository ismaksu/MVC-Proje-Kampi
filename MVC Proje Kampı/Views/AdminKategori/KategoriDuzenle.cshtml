@model EntityLayer.Concrete.Kategori
@{
    ViewBag.Title = "KategoriDuzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2>Kategori Güncelleme Sayfası</h2>

@using (Html.BeginForm("KategoriDuzenle", "AdminKategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x => x.KategoriID, new { @class = "form-control", @readonly = "true" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextAreaFor(x => x.KategoriAciklama, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}